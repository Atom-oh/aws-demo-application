# =============================================================================
# HireHub Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# Usage: cp .env.example .env

# =============================================================================
# General Settings
# =============================================================================
APP_ENV=development
LOG_LEVEL=debug

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=hirehub
POSTGRES_PASSWORD=hirehub_dev
POSTGRES_DB=hirehub

# Service-specific database URLs
USER_SERVICE_DATABASE_URL=postgres://hirehub:hirehub_dev@localhost:5432/hirehub_users?sslmode=disable
JOB_SERVICE_DATABASE_URL=jdbc:postgresql://localhost:5432/hirehub_jobs
RESUME_SERVICE_DATABASE_URL=postgresql://hirehub:hirehub_dev@localhost:5432/hirehub_resumes
APPLY_SERVICE_DATABASE_URL=postgres://hirehub:hirehub_dev@localhost:5432/hirehub_applies?sslmode=disable
MATCH_SERVICE_DATABASE_URL=postgresql://hirehub:hirehub_dev@localhost:5432/hirehub_matches
NOTIFICATION_SERVICE_DATABASE_URL=postgres://hirehub:hirehub_dev@localhost:5432/hirehub_notifications?sslmode=disable

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=hirehub-local

# =============================================================================
# OpenSearch Configuration
# =============================================================================
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_URL=http://localhost:9200

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Configuration
S3_BUCKET=hirehub-resumes-dev
S3_ENDPOINT=  # Leave empty for AWS, set for LocalStack

# =============================================================================
# AWS Cognito Configuration
# =============================================================================
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_CLIENT_SECRET=
COGNITO_DOMAIN=

# =============================================================================
# AWS Bedrock Configuration
# =============================================================================
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_REGION=ap-northeast-2

# =============================================================================
# AWS SES Configuration
# =============================================================================
SES_SENDER_EMAIL=noreply@hirehub.example.com
SES_REGION=ap-northeast-2

# =============================================================================
# Service Ports (HTTP)
# =============================================================================
USER_SERVICE_PORT=8001
JOB_SERVICE_PORT=8002
RESUME_SERVICE_PORT=8003
APPLY_SERVICE_PORT=8004
MATCH_SERVICE_PORT=8005
AI_SERVICE_PORT=8006
NOTIFICATION_SERVICE_PORT=8007
WEB_FRONTEND_PORT=3001
ADMIN_DASHBOARD_PORT=3000

# =============================================================================
# Service Ports (gRPC)
# =============================================================================
USER_SERVICE_GRPC_PORT=9001
JOB_SERVICE_GRPC_PORT=9002
RESUME_SERVICE_GRPC_PORT=9003
APPLY_SERVICE_GRPC_PORT=9004
MATCH_SERVICE_GRPC_PORT=9005
AI_SERVICE_GRPC_PORT=9006
NOTIFICATION_SERVICE_GRPC_PORT=9007

# =============================================================================
# Service Discovery (for local development)
# =============================================================================
USER_SERVICE_ADDR=localhost:9001
JOB_SERVICE_ADDR=localhost:9002
RESUME_SERVICE_ADDR=localhost:9003
APPLY_SERVICE_ADDR=localhost:9004
MATCH_SERVICE_ADDR=localhost:9005
AI_SERVICE_ADDR=localhost:9006
NOTIFICATION_SERVICE_ADDR=localhost:9007

# =============================================================================
# Kong API Gateway
# =============================================================================
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_REGISTRY=hirehub
IMAGE_TAG=latest

# =============================================================================
# mTLS Configuration (optional for local dev)
# =============================================================================
MTLS_ENABLED=false
TLS_CERT_PATH=./certs/server.crt
TLS_KEY_PATH=./certs/server.key
TLS_CA_PATH=./certs/ca.crt

# =============================================================================
# Observability
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=9090

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST=200

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7
